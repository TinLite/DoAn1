{% layout "_include/layout.liquid" %}
{% block content %}
    {% if err %}
        <div class="text-center py-4 bg-rose-600 text-white text-2xl">{{ err }}</div>
    {% endif %}
    {% if success %}
        <div class="text-center py-4 bg-white text-2xl">Cập nhật dữ liệu thành công.</div>
    {% endif %}
    <div class="container mx-auto p-4 max-w-2xl">
        <a href="{{ req.baseUrl }}" class="pb-2">&LeftAngleBracket; Trở về</a>
        <div class="text-xl py-2 border-b-2 border-gray-900 border-solid">Thêm xe</div>
        <div class="flex">
            <div id="car-photo" class="p-4 w-1/2">
                <video id="camera-feed" autoplay></video>
                {% comment %} <canvas id="camera-result" class="max-w-1/2"></canvas> {% endcomment %}
                <img alt="Taken image" id="photo-taken" src="https://cataas.com/cat?width=300&height=200" class="hidden">
                <div class="grid">
                    <button id="upload-image" class="border-2 border-black px-4 py-2">Tải ảnh lên</button>
                    <button id="take-image" class="bg-black text-white px-4 py-2">Chụp bằng máy ảnh</button>
                </div>
            </div>
            <form
                action=""
                method="post"
                class="w-full pt-4"
                id="thembai">
                <input
                    type="hidden"
                    name="mabai"
                    id="mabai"
                    value="{{ body.mabai }}"
                    placeholder="1234">
                <label for="soxe" class="block">Số xe</label>
                <input
                    type="text"
                    name="soxe"
                    id="soxe"
                    class="w-full"
                    value="{{ body.soxe }}"
                    placeholder="65A12345"
                    required>
                <label for="mauxe" class="block">Mẫu xe</label>
                <input
                    type="text"
                    name="mauxe"
                    id="mauxe"
                    class="w-full"
                    value="{{ body.mauxe }}"
                    placeholder="Sh150">
                <input type="hidden" name="anh" id="anh">
                <div id="submit-container">
                    <button type="submit" class="block m-auto bg-black text-white px-4 py-2 mt-2">Thêm</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/dist/car_camera.js"></script>
    <script>
        requestCamAndStreamInVideo(cameraFeed);
    </script>
{% endblock %}