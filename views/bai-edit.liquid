{% layout "_include/layout.liquid" %}
{% block content %}
    <div class="container mx-auto p-4 max-w-2xl">
        <a href="{{ req.baseUrl }}" class="pb-2">&LeftAngleBracket; Trở về</a>
        <div class="text-xl py-2 border-b-2 border-gray-900 border-solid">Cập nhật bãi xe</div>
        <form
            action=""
            method="post"
            class="grid grid-cols-1"
            id="car-detail">
            <label for="mabai">Mã bãi</label>
            <input
                type="text"
                name="mabai"
                id="mabai"
                disabled
                value="{{ data.Mabai }}"
                placeholder="1234">
            <label for="tenbai">Tên bãi</label>
            <input
                type="text"
                name="tenbai"
                id="tenbai"
                value="{{ data.Tenbai }}"
                placeholder="Bãi xe...">
            <label for="vitri">Vị trí</label>
            <input
                type="text"
                name="vitri"
                id="vitri"
                value="{{ data.Vitri }}"
                placeholder="Khu X...">
            <div class="submit-container">
                <button type="submit" class="block m-auto bg-black text-white px-4 py-2 rounded-lg">Cập nhật</button>
            </div>
        </form>
    </div>
{% endblock %}